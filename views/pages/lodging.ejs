<section class="py-5 " style="background-color: #CAE7DF;">
  <div class="container px-4 px-lg-5 mt-5" >
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% Lod.forEach((Forum)=>{ %>
      <div class="col mb-5">
        <!--card-->
        <div class="card h-100">             
          <img class="card-img-top" src="<%= Forum.gambar %>" alt="..." height="200px" width="450px" class="rounded-3" />
          <div class="card-body p-4">
            <div>
              <h2 class="fw-bolder"><%= Forum.nama %></h2>
            </div>
            <div>
              <p><%= Forum.des_pdk %></p>
            </div>
          </div>
          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/halaman/<%= Forum._id %>/<%= Forum.nama %>">Go To</a></div>
          </div>            
        </div>   
      </div>
      <%}); %> 
    </div>
  </div>
</section>